{
  "name": "inTrello",
  "version": "1.0.1",
  "description": "Add people data from LinkedIn profile to Trello boards as cards",
  "permissions": ["activeTab", "declarativeContent", "https://www.linkedin.com/in/*"],
  "background": {
    "scripts": ["event_listener.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "img/icon_16.png"
  },
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_64.png",
    "128": "img/icon_128.png"
  },
  "manifest_version": 2
}

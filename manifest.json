{
  "name": "inTrello",
  "version": "1.2.0",
  "description": "Add people data from LinkedIn profile to Trello boards as cards",
  "permissions": ["activeTab", "declarativeContent", "https://www.linkedin.com/in/*"],
  "background": {
    "scripts": ["eventListener.js"],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["https://www.linkedin.com/in/*"],
    "js": ["lib/jquery-3.3.1.min.js", "lib/trelloClient.js", "inTrello.js"]
  }],
  "page_action": {
    "default_icon": "img/icon_16.png"
  },
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_64.png",
    "128": "img/icon_128.png"
  },
  "manifest_version": 2
}
